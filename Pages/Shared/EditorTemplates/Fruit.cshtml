@model MonPrimeur.Models.Fruit

@{
    ViewData.TemplateInfo.HtmlFieldPrefix = "Fruit";
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Image.File" class="control-label"></label>
    @if (null != Model.Image)
    {
        <img src="@Url.Content(Model.Image.Path)" width="128" height="128" />
    }
        <input type="file" asp-for="Image.File" class="form-control" />
        <span asp-validation-for="Image.File" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Prix" class="control-label"></label>
        <input asp-for="Prix" class="form-control" />
        <span asp-validation-for="Prix" class="text-danger"></span>
    </div>